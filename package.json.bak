{
  "name": "yossi-record-dashboard-root",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "api": "node server.mjs",
    "web:build": "cd dashboard && npm run build",
    "web:preview": "cd dashboard && npx vite preview --host 0.0.0.0 --port 5174",
    "preview:all": "concurrently -n API,WEB -c green,magenta \"node server.mjs\" \"cd dashboard && npx vite preview --host 0.0.0.0 --port 5174\"",
    "smoke": "bash scripts/smoke.sh",
    "test:smoke": "node --test tests/smoke.test.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
