// --- Rename recording ---
import fs from "fs";
import path from "path";
app.put("/api/recordings/:name", express.json(), (req, res) => {
  try {
    const oldName = req.params.name;
    const { newName } = req.body || {};
    if (!oldName || !newName) {
      return res.status(400).json({ ok:false, error:"MISSING_NAME" });
    }
    // ×ž× ×™×¢×ª ×—×¦×™×™×ª × ×ª×™×‘
    if (newName.includes("..") || oldName.includes("..") || newName.includes("/") ) {
      return res.status(400).json({ ok:false, error:"BAD_NAME" });
    }
    const dir = process.env.RECORDINGS_DIR || path.join(process.cwd(), "recordings");
    const from = path.join(dir, oldName);
    const to   = path.join(dir, newName);

    if (!fs.existsSync(from)) {
      return res.status(404).json({ ok:false, error:"NOT_FOUND" });
    }
    if (fs.existsSync(to)) {
      return res.status(409).json({ ok:false, error:"EXISTS" });
    }
    fs.renameSync(from, to);
    return res.json({ ok:true, from: oldName, to: newName });
  } catch (e) {
    console.error("rename error", e);
    return res.status(500).json({ ok:false, error:"SERVER_ERROR" });
  }
});
